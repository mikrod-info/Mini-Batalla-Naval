<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:padding="30dp"
    android:layout_margin="20dp">
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textColor="@color/colorPrimario"
            android:text="@string/nombre_juego"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/pirata_one_regular"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/tvRestantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="@color/colorPrimario"
            android:fontFamily="@font/pirata_one_regular"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/tvMovimientos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/colorPrimario"
            android:fontFamily="@font/pirata_one_regular"
            />
        <TextView
            android:id="@+id/tvAciertos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/colorPrimario"
            android:fontFamily="@font/pirata_one_regular"
            />
    </TableRow>

    <GridLayout
        android:id="@+id/glTablero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        >
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/bReiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="-"
            android:fontFamily="@font/pirata_one_regular"
            android:elevation="6dp"
            />
    </LinearLayout>

</TableLayout>