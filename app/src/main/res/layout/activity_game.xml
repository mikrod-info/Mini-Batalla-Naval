<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:padding="30dp"
    android:layout_margin="20dp">
    <TableRow>
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/estilo_titulo"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/tvRestantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/estilo_text_view"
            />
    </TableRow>

    <TableRow
        android:layout_marginBottom="8dp"
        >
        <TextView
            android:id="@+id/tvMovimientos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/estilo_text_view"
            />
        <TextView
            android:id="@+id/tvAciertos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/estilo_text_view"
            />
    </TableRow>

    <GridLayout
        android:id="@+id/glTablero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        >
    </GridLayout>

    <TableRow
        android:layout_marginTop="16dp"
        >
        <TextView
            android:id="@+id/tvMensajeJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            style="@style/estilo_text_view"
            />
    </TableRow>

    <LinearLayout
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/bReiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            style="@style/estilo_boton_reiniciar"
            />
    </LinearLayout>


    <TableRow
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_span="1">
            <Button
            android:id="@+id/buttonOpenHelpFromMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayuda"
            style="@style/estilo_boton_reiniciar"
            />
        </LinearLayout>
    </TableRow>

</TableLayout>