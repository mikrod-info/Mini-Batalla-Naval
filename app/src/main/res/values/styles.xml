<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- main -->
    <!-- game -->
    <style name="estilo_titulo">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorPrimario</item>
        <item name="android:fontFamily">@font/pirata_one_regular</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="estilo_text_view">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimario</item>
        <item name="android:fontFamily">@font/chelsea_market_regular</item>
    </style>

    <style name="estilo_boton_tablero" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/azulMar</item>
    </style>

    <style name="estilo_boton_reiniciar" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/chelsea_market_regular</item>
        <item name="android:backgroundTint">@color/colorSecundario</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <!-- help -->
    <style name="estilo_subtitulo_ayuda">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSecundario</item>
        <item name="android:fontFamily">@font/chelsea_market_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="estilo_texto_normal_ayuda">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimario</item>
        <item name="android:fontFamily">@font/chelsea_market_regular</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

